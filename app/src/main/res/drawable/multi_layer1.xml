<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:layout_width="365dp"
    android:layout_height="114dp"
    android:background="@drawable/rounded_white_bg"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Rectangle vert par-dessus -->
    <ImageView
        android:id="@+id/rectangle_vert"
        android:layout_width="102dp"
        android:layout_height="91dp"
        android:layout_gravity="start|center_vertical"
        android:src="@drawable/rounded_button_green"
        android:scaleType="fitXY" />

    <!-- Fleur au-dessus du rectangle vert -->
    <ImageView
        android:id="@+id/flower_image"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_gravity="start|center_vertical"
        android:layout_marginStart="6dp"
        android:src="@drawable/flower2"
        android:scaleType="centerCrop"
        android:background="@drawable/rounded_background" />

    <!-- Logo poubelle Ã  droite -->
    <ImageView
        android:id="@+id/trash_logo"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="end|center_vertical"
        android:layout_marginEnd="10dp"
        android:src="@drawable/trash_logo"
        android:scaleType="fitCenter" />
</FrameLayout>

