<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">

    <!-- Bouton retour -->
    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="8dp"
        android:background="#FFF8F3"
        android:src="@drawable/ic_back"
        android:contentDescription="Back button"
        />

    <!-- Slider horizontal des photos -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerPhotos"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal" />

    <!-- Formulaire scrollable -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- On enlÃ¨ve la CardView individuelle de la parcelle (on affiche les photos en haut) -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Titre"
                android:textColor="#666666"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/titleParcelle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edittext_bg"
                android:padding="12dp"
                android:text=""
                android:layout_marginTop="4dp"
                android:textColor="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Localisation"
                android:layout_marginTop="12dp"
                android:textColor="#666666"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/localisationParcelle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edittext_bg"
                android:padding="12dp"
                android:text=""
                android:layout_marginTop="4dp"
                android:textColor="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:layout_marginTop="12dp"
                android:textColor="#666666"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/parcelleDescription"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/rounded_edittext_bg"
                android:padding="12dp"
                android:text=""
                android:layout_marginTop="4dp"
                android:textColor="#000000" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_button_yellow"
                android:text="Enregistrer"
                android:textStyle="bold"
                android:textColor="@color/text_yellow_button"
                android:textSize="16sp"
                android:padding="12dp"
                app:backgroundTint="@null"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
