<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#FFF8F3">

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="8dp"
        android:background="match_parent"
        android:src="@drawable/ic_back"
        android:contentDescription="Back button" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choisir la parcelle"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:textColor="@color/text_dark_green"
                android:textSize="30sp" />


            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

                <ImageView
                    android:id="@+id/parcelleImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/flower2"
                    android:contentDescription="Image de la parcelle" />
            </androidx.cardview.widget.CardView>


            <ImageButton
                android:layout_width="210dp"
                android:layout_height="83dp"

                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:src="@drawable/ajouter_button"
                android:contentDescription="Add new photo button"
            />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prendre en photo une nouvelle espÃ¨ce"
                android:textColor="@color/text_light_green"
                android:textStyle="italic"
                android:textSize="10sp"
                android:layout_gravity="center_horizontal"/>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/next"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="100dp"
                android:layout_marginBottom="50dp"
                android:background="@drawable/rounded_button_yellow"
                android:text="Suivant"
                android:textColor="@color/text_yellow_button"
                android:textSize="16sp"
                android:padding="12dp"
                app:backgroundTint="@null"/>

        </LinearLayout>

    </ScrollView>
</LinearLayout>
