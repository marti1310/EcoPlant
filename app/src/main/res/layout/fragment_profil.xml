<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#FFF8F3">


    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="127dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:contentDescription="Profile picture placeholder"
        android:src="@drawable/profile_logo" />

    <TextView
        android:id="@+id/pseudo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="4dp"
        android:text="pseudo"
        android:textColor="#436B44"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:padding="20dp">


        <Button
            android:id="@+id/historiqueButton"
            android:layout_width="339dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_button_brown"
            android:padding="12dp"
            android:text="Historique des analyses"
            android:textColor="#FFFCDF"
            android:textSize="16sp" />

        <Button
            android:id="@+id/gestioncompteButton"
            android:layout_width="339dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_button_green"
            android:padding="12dp"
            android:text="Gestion du compte"
            android:textColor="#FFFCDF"
            android:textSize="16sp" />

        <Button
            android:id="@+id/signoutButton"
            android:layout_width="339dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_button_yellow"
            android:padding="12dp"
            android:text="Se dÃ©connecter"
            android:textColor="#4F604B"
            android:textSize="16sp" />

    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="#6E7B34"
        android:gravity="bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/navigation_items" />


</LinearLayout>


