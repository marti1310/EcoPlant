<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF8F3">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/navigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/profileImage"
                android:layout_width="127dp"
                android:layout_height="120dp"
                android:layout_marginTop="50dp"
                android:contentDescription="Profile picture placeholder"
                android:src="@drawable/profile_logo" />

            <TextView
                android:id="@+id/pseudo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="pseudo"
                android:textColor="#436B44"
                android:textSize="20sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/historiqueButton"
                android:layout_width="339dp"
                android:layout_height="60dp"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_button_brown"
                android:text="Historique des analyses"
                android:textColor="#FFFCDF"
                android:textSize="16sp"
                app:backgroundTint="@null"
            />


            <Button
                android:id="@+id/gestioncompteButton"
                android:layout_width="339dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_button_green"
                android:padding="12dp"
                android:text="Gestion du compte"
                android:textColor="#FFFCDF"
                android:textSize="16sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/signoutButton"
                android:layout_width="339dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_button_yellow"
                android:padding="12dp"
                android:text="Se dÃ©connecter"
                android:textColor="#4F604B"
                android:textSize="16sp"
                app:backgroundTint="@null"/>

        </LinearLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="0dp"
        android:layout_height="58dp"
        android:background="#6E7B34"
        app:menu="@menu/navigation_items"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:itemIconTint="@color/text_green_button"
        app:itemIconSize="40dp"
        app:labelVisibilityMode="unlabeled"/>

</androidx.constraintlayout.widget.ConstraintLayout>
