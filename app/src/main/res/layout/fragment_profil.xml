<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFF8F3"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="127dp"
            android:layout_height="120dp"
            android:layout_marginTop="50dp"
            android:contentDescription="Profile picture placeholder"
            android:src="@drawable/profile_logo" />

        <TextView
            android:id="@+id/pseudo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="pseudo"
            android:textColor="#436B44"
            android:textSize="20sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/historiqueButton"
            android:layout_width="339dp"
            android:layout_height="60dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_button_brown"
            android:text="Historique des analyses"
            android:textStyle="bold"
            android:textColor="@color/text_brown_button"
            android:textSize="16sp"
            app:backgroundTint="@null" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/gestioncompteButton"
            android:layout_width="339dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_button_green"
            android:padding="12dp"
            android:text="Gestion du compte"
            android:textStyle="bold"
            android:textColor="@color/text_green_button"
            android:textSize="16sp"
            app:backgroundTint="@null" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/signoutButton"
            android:layout_width="339dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_button_yellow"
            android:padding="12dp"
            android:text="Se dÃ©connecter"
            android:textStyle="bold"
            android:textColor="@color/text_yellow_button"
            android:textSize="16sp"
            app:backgroundTint="@null"/>

    </LinearLayout>
</ScrollView>
